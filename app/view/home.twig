{% extends 'template.twig' %}

{% block content %}
<div class="container">
  <div class="container-movie">
    {% for movie in movies %}
        <div class="card card-movie">
          <a href="index.php?page=movie&id={{ movie.idmovie }}">
            <div class="card-image">
              <img src="{{ movie.img }}">
            </div>
          </a>
          <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">{{ movie.title }}</span>
              <p><a href="index.php?page=movie&id={{ movie.idmovie }}">See More</a></p>
          </div>
        </div>
    {% endfor %}
    </div>
</div>    
{% endblock %}