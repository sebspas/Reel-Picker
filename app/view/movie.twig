{% extends 'template.twig' %}

{% block content %}
    <div class="back-button">
        <a href="index.php?page=home" class="waves-effect waves-dark btn">
            <i class="fa fa-chevron-left left" aria-hidden="true">
            </i>Back</a>
    </div>
    <div class="row">
        <div class="col s12 m4">
            <img class="movie-image" src="{{ movie.img }}">
        </div>
        <div class="col s12 m8">
            <div class="card blue-grey darken-1 movie-content">
                <div class="card-content white-text">
                    <h4> {{ movie.title }}</h4>
                    <div class="divider"></div>
                    <span class="card-title"><i class="fa fa-tag" aria-hidden="true"></i> Tags</span>
                    <div class="row">
                        <div class="col m12">
                         {% for tag in tags %}
                            <div class="chip">
                                {{ tag.name }}
                            </div>
                         {% endfor %}
                         </div>
                    </div>
                    <span class="card-title"><i class="fa fa-info" aria-hidden="true"></i> Description</span>
                    <p>{{ movie.desc }}</p>
                </div>
                <div class="card-action">
                    <a class="right" onclick="Materialize.toast('Glad you liked it!', 1000)" href="#"><i class="fa fa-heart" aria-hidden="true"></i> I Love It</a>
                    <a href="#" onclick="Materialize.toast('Sad to hear it...', 1000)"><i class="fa fa-thumbs-down" aria-hidden="true"></i> I Don't Like It</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}