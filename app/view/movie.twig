{% extends 'template.twig' %}

{% block content %}
    <div class="row">
        <div class="col s12 m4">
            <img class="movie-image" src="{{ movie.img }}">
        </div>
        <div class="col s12 m8">
            <div class="card blue-grey darken-1 movie-content">
                <div class="card-content white-text">
                    <h4> {{ movie.title }}</h4>
                    <div class="divider"></div>
                    <span class="card-title"><i class="fa fa-tag" aria-hidden="true"></i> Tags</span>
                    <div class="row">
                        <div class="col m12">
                         {% for tag in tags %}
                            <div class="chip">
                                {{ tag.name }}
                            </div>
                         {% endfor %}
                         </div>
                    </div>
                    <span class="card-title"><i class="fa fa-info" aria-hidden="true"></i> Description</span>
                    <p>{{ movie.desc }}</p>
                </div>
                <div class="card-action">
                    <a class="right" href="#"><i class="fa fa-heart" aria-hidden="true"></i> I Love It</a>
                    <a href="#"><i class="fa fa-thumbs-down" aria-hidden="true"></i> I Don't Like IT</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}