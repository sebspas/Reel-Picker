{% extends 'template.twig' %}

{% block content %}
<div class="container">
    <div class="back-button">
        <a href="index.php?page=search&search={{ movie.title }}" class="waves-effect waves-dark btn">
            <i class="fa fa-chevron-left left" aria-hidden="true">
            </i>Back</a>
    </div>
    <div class="row">
        <div class="col s12 m4">
            <img class="movie-image" src="{{ movie.image }}">
        </div>
        <div class="col s12 m8">
            <div class="card blue-grey darken-1 movie-content">
                <div class="card-content white-text">
                    <h4> {{ movie.title }} </h4>
                    <div class="divider"></div>
                    <!--Movie Tags-->
                    <span class="card-title"><i class="fa fa-tag" aria-hidden="true"></i> Tags</span>
                    <div class="row">
                        <div class="col m12">
                         {% for tag in movie.tags %}
                            <div class="chip">
                                {{ tag }}
                            </div>
                         {% endfor %}
                         </div>
                    </div>

                    <!--Movie Info-->
                    <span class="card-title"><i class="fa fa-info" aria-hidden="true"></i> Info</span>
                    <div class="row">
                        <div class="col s12 m3">
                            <div>Release Year : {{ movie.year }}</div>
                            <div>Runtime : {{ movie.runtime }} min</div>
                            <div>Rating : </div>
                        </div>
                        <div class="col s12 m9">
                            <div>Director(s) : {{ movie.directors }}</div>
                            <div>Cast : {{ movie.cast }}</div>
                        </div>
                    </div>

                    <!--Movie Description-->
                    <span class="card-title"><i class="fa fa-film" aria-hidden="true"></i> Sypnosis</span>
                    <div>{{ movie.desc }}</div>
                </div>
                <div class="card-action">
                    <a href="#" onclick="Materialize.toast('Sad to hear it...', 1000)"><i class="fa fa-star" aria-hidden="true"></i> {{ movie.rating }}/10</a>
                    <div class="right" href="#">
                        <div>Rate it !</div>
                        
                        <form id="ratingsForm">
	                        <div class="stars">
		                        <input type="radio" name="star" class="star-1" id="star-1" />
		                        <label class="star-1" for="star-1">1</label>
		                        <input type="radio" name="star" class="star-2" id="star-2" />
		                        <label class="star-2" for="star-2">2</label>
		                        <input type="radio" name="star" class="star-3" id="star-3" />
		                        <label class="star-3" for="star-3">3</label>
		                        <input type="radio" name="star" class="star-4" id="star-4" />
		                        <label class="star-4" for="star-4">4</label>
		                        <input type="radio" name="star" class="star-5" id="star-5" />
		                        <label class="star-5" for="star-5">5</label>
		                        <span></span>
	                        </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}