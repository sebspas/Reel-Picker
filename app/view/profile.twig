{% extends 'template.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col s12 m4 low">
            <div class="card blue-grey darken-1">
                <div class="card-image">
                    <img class="avatar center" src="webroot/images/User_Avatar-ninja.png">
                </div>
                    <div class="center card-content white-text">Greetings {{ name }}!</div>
            </div>                
        </div>
        <div class="col s12 m8 card blue-grey darken-1 low">
            <h4 class="style-blue">User Tags</h4>
            <div class="divider"></div>
            {% for tag in tags %}
            <div class="chip">{{ tag.name }} ({{ tag.rating }})</div>
            {% endfor %}
        </div>
        <div class="col s12 m8 card blue-grey darken-1 low">
            <h4 class="style-blue">Liked Movies</h4>
            <div class="divider"></div>
            <div class="carousel">
                {% for movie in movies %}
                    <a class="carousel-item" href="#one!"><img class="movie-image" src="{{ movie.image }}"></a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}