{% extends 'template.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col s2 m3 low">
            <div class="card blue-grey darken-1">
                <div class="card-image">
                    <img class="avatar center" src="webroot/images/User_Avatar-ninja.png">
                </div>
                    <div class="center card-content white-text">Hello, I'm {{ name }}!</div>
            </div>                
        </div>
        <div class="col s7 card blue-grey darken-1 low">
            <h4 class="style-blue">User Tags</h4>
            <div class="divider"></div>
            <div class="chip">tag<i class="close material-icons">close</i></div>
            <div class="chip">tag<i class="close material-icons">close</i></div>
            <div class="chip">tag<i class="close material-icons">close</i></div>
            <div class="chip">tag<i class="close material-icons">close</i></div>
        </div>
        <div class="col s7 card blue-grey darken-1 low">
            <h4 class="style-blue">Liked Movies</h4>
            <div class="divider"></div>
            <div class="carousel">
                {% for movie in movies %}
                    <a class="carousel-item" href="#one!"><img class="movie-image" src="{{ movie.img }}"></a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}