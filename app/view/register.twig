{% extends 'template.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="offset-s3 center block col s6">
            <h1>Sign Up</h1>
            <div class="divider"></div>
            <form class="" action="index.php?page=register" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate" name="email" value="{{ data['email'] }}">
                        <label for="email">E-mail Address</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="pseudo" type="text" class="validate" name="username" value="{{ data['username'] }}">
                        <label for="pseudo">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate" name="password" value="{{ data['password'] }}">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate" name="passwordConfirm" value="{{request.form.passwordConfirm}}">
                        <label for="password">Retype Password</label>
                    </div>
                </div>
                <div class="row">
                    <input class="btn btn-default" type="submit" name="register" value="Sign Up">
                </div>
            </form>
            {% if errors %}
            <p class="error">
                <strong>Error:</strong>                
                {% for error in errors %}
                    {{ error }}<br/>
                {% endfor %}
            </p>
            {% endif %}
            <p>Already a member? <a href="index.php?page=login">SIGN IN</a></p>
        </div>
    </div>
</div>
{% endblock %}
